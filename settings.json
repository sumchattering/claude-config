{
  "env": {
    "ENABLE_TOOL_SEARCH": "auto"
  },
  "statusLine": {
    "type": "command",
    "command": "ccstatusline"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/dangerous-command-blocker.py 2>&1"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude is waiting for your input\" with title \"Claude Code\"'"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "LS",
      "Glob",
      "Grep",
      "ReadLints",
      "StrReplace",
      "Delete",
      "Bash(git *)",
      "Bash(gh )",
      "Bash(npm run )",
      "Bash(npm install)",
      "Bash(npm test)",
      "Bash(npm ci)",
      "Bash(npx )",
      "Bash(node )",
      "Bash(yarn )",
      "Bash(pnpm )",
      "Bash(npm )",
      "Bash(npm run build )",
      "Bash(npm run lint )",
      "Bash(npm run lint:file )",
      "Bash(npm run test )",
      "Bash(npm run test:file )",
      "Bash(npm run typecheck )",
      "Bash(npm test )",
      "Bash(ls)",
      "Bash(dir)",
      "Bash(mkdir )",
      "Bash(mv )",
      "Bash(cp )",
      "Bash(touch )",
      "Bash(cat )",
      "Bash(head )",
      "Bash(tail )",
      "Bash(wc )",
      "Bash(find )",
      "Bash(grep )",
      "Bash(rg )",
      "Bash(sort )",
      "Bash(uniq )",
      "Bash(diff )",
      "Bash(which )",
      "Bash(where )",
      "Bash(echo )",
      "Bash(pwd)",
      "Bash(cd )",
      "Bash(type )",
      "Bash(file )",
      "Bash(whoami)",
      "Bash(hostname)",
      "Bash(date)",
      "Bash(python )",
      "Bash(python3 )",
      "Bash(pip )",
      "Bash(pip3 )",
      "Bash(cargo )",
      "Bash(go )",
      "Bash(dotnet )",
      "Bash(swift )",
      "Bash(swiftc )",
      "Bash(xcodebuild )",
      "Bash(pod )",
      "Bash(bundle )",
      "Bash(ruby )",
      "Bash(gradle )",
      "Bash(make )",
      "Bash(cmake )",
      "Bash(rustc )",
      "Bash(javac )",
      "Bash(java )",
      "Bash(mvn )",
      "Bash(cc )",
      "Bash(gcc )",
      "Bash(g++ )",
      "Bash(clang )",
      "Bash(comm )",
      "Bash(bq query )",
      "Bash(chmod )",
      "Bash(sed )",
      "Bash(awk )",
      "Bash(sh )",
      "Bash(bash )",
      "Bash(curl )",
      "Bash(wget )",
      "Bash(jq )",
      "Bash(brew )",
      "Bash(brew install )",
      "Bash(brew uninstall )",
      "Bash(brew update)",
      "Bash(brew upgrade)",
      "Bash(brew tap )",
      "Bash(tar )",
      "Bash(zip )",
      "Bash(unzip )",
      "Bash(gzip )",
      "Bash(gunzip )",
      "Bash(./)",
      "Bash(* && *)",
      "Bash(* || *)",
      "Bash(*; *)",
      "Bash(claude config:*)",
      "Bash(claude run:*)"
    ],
    "deny": [
      "Bash(rm -rf )",
      "Bash(rm -r )",
      "Bash(rmdir /s)",
      "Bash(del /s)",
      "Bash(sudo )",
      "Bash(chmod 777)",
      "Bash(format )",
      "Read(.env)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/credentials*)",
      "Read(**/*.pem)",
      "Read(**/*.key)"
    ]
  }
}
