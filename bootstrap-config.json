{
  "mcpServers": {
    "iterm2": {
      "command": "npx",
      "args": ["github:sumchattering/iterm2-mcp-server"],
      "global": true
    },
    "slack": {
      "command": "slack-mcp-server",
      "args": [],
      "install": "npm install -g slack-mcp-server",
      "env": {
        "SLACK_TOKEN_FILE": "$HOME/.slack-mcp-tokens.json"
      },
      "repositories": [
        "$HOME/MyProjects"
      ]
    },
    "jira": {
      "command": "npx",
      "args": ["-y", "mcp-jira-stdio"],
      "envFile": "$HOME/.jira-mcp-credentials.json",
      "global": true
    },
    "iterable": {
      "command": "npx",
      "args": ["-y", "@iterable/mcp"],
      "envFile": "$HOME/.iterable-mcp-credentials.json",
      "env": {
        "ITERABLE_ENABLE_WRITES": "true",
        "ITERABLE_USER_PII": "true",
        "ITERABLE_ENABLE_SENDS": "true"
      },
      "repositories": [
        "$HOME/MyProjects/iterable-swift-sdk",
        "$HOME/MyProjects/iterable-android-sdk",
        "$HOME/MyProjects/react-native-sdk"
      ],
      "expectedTools": [
        "get_campaigns",
        "get_campaign",
        "get_campaign_metrics",
        "abort_campaign",
        "cancel_campaign",
        "get_catalogs",
        "get_catalog_items",
        "create_catalog",
        "get_journeys",
        "get_lists",
        "create_list",
        "get_templates",
        "get_email_template",
        "upsert_email_template",
        "update_email_template",
        "get_sms_template",
        "get_push_template",
        "get_inapp_template",
        "get_snippets",
        "create_snippet",
        "get_user_fields",
        "get_channels",
        "get_message_types"
      ]
    },
    "sentry": {
      "type": "http",
      "url": "https://mcp.sentry.dev/mcp",
      "repositories": [
        "$HOME/MyProjects/test-app/test-mobile",
        "$HOME/MyProjects/test-app/test-backend",
        "$HOME/MyProjects/test-app"
      ]
    }
  },
  "commands": {
    "global": [
      "review-uncommitted.md",
      "jira-triage.md"
    ],
    "repositories": {
      "$HOME/MyProjects/iterable-swift-sdk": [
        "iterable-post-sdk-pr-to-slack.md",
        "iterable-commit-push-pr.md",
        "jira-triage.md"
      ],
      "$HOME/MyProjects/iterable-android-sdk": [
        "iterable-post-sdk-pr-to-slack.md",
        "iterable-commit-push-pr.md",
        "jira-triage.md"
      ],
      "$HOME/MyProjects/react-native-sdk": [
        "iterable-post-sdk-pr-to-slack.md",
        "iterable-commit-push-pr.md",
        "jira-triage.md"
      ]
    }
  }
}
